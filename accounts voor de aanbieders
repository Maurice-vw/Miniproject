store_user= []
store_pass= []

def account_maken():
    user = input('Username Aanmaken: ')
    password = input('Wachtwoord Aanmaken: ')
    global store_user
    global store_pass
    store_user =["roger", "Jon"]
    store_pass =["tennis", "soccer"]
    store_user.append(user)
    store_pass.append(password)

def inloggen():
    userguess=input('Username:')
    passwordguess=input('Wachtwoord:')
    while (userguess not in store_user) or (passwordguess not in store_pass):
        print("Username of wachtwoord incorrect.")
        userguess=input('User Name:')
        passwordguess=input('Password:')
    return userguess

def acties(user):
    actie= 1
    while True:
        print("Wat wilt u gaan doen?")
        actie = int(input("1. Uw aandiedingen 2. Nieuwe aanbieding maken. 3. Uitloggen:"))
        if actie == 1:
            pass
        elif actie == 2:
            pass
        elif actie == 3:
            print('Je bent uitgelogd.')
            break
        else:
            continue

while True:
    print("Wil je een account maken of inloggen?")
    keuze= int(input("1. Account aanmaken 2. Inloggen 3. Afsluiten:"))
    if keuze == 1:
        account_maken()
    elif keuze == 2:
        user=inloggen()
        print ("Welkom",user+'.',"U bent nu ingelogd.")
        acties(user)
    elif keuze == 3:
        print ('Het programma is afgesloten.')
        break
    else:
        print('Dit is geen geldige optie.')
        continue
